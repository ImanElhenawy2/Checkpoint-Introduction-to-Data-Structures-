PROCEDURE dot_product(v1:ARRAY_OF_INTEGER[4],v2:ARRAY_OF_INTEGER[4] )
VAR
    ps: INTEGER;
BEGIN
    read(ps:=0)
    FOR i FROM 0 TO v1.length-1 STEP 1 DO

        ps:= v1[i]*v2[i]+ ps

    END_FOR
END

ALGORITHM DOT_PRODUCT

VAR
    v1: ARRAY_OF_INTEGER[4]:= [2, 4, 7, 8];
    v2: ARRAY_OF_INTEGER[4]:= [3, 2, 6, 0];
    ORTH: BOOLEAN;
BEGIN
   dot_product(v1, v2)
    IF (ps = 0) THEN
       ORTH := true
    ELSE
       ORTH := false   
    END_IF


END  






















